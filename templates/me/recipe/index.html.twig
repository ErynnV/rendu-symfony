{% extends 'base.html.twig' %}

{% block title %}Recipe List!{% endblock %}

{% block body %}
    <h1> Recipe List</h1>
    <a href={{path('app_me_recipe_create')}}>New Recipe</a>
    <a href={{path('app_me')}}>My Userpage</a>
    <div>
    <ul>
        {% for recipe in recipes %}
        <li>
            <div>
                <h2>Title : {{ recipe.title}}</h2>
                <p>Category : {{ recipe.category.name }}</p>
                {{ form(deleteForms[recipe.id], {'action': path('app_me_recipe_delete'), 'method': 'DELETE'}) }}
                <a href={{ path('app_me_recipe_update', {id: recipe.id})}}>Update</a>
                <a href={{ path ('app_me_recipe_details', {id: recipe.id}) }}>Details Here</a>
            </div>
        </li>
        {% endfor %}
    </ul>
    </div>
{% endblock %}